<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      
      <%= form_with(model: @user, url: user_update_overtime_response_path(@user), method: :patch, local: true) do |f| %>
        <% @attendances.each do |attendance| %>
            <% user = User.find(attendance.user_id) %>
              <h2>【<%= user.name %>からの残業申請】</h2>
              <%= f.fields_for "attendances[]", attendance do |a| %>
            <table class="table table-bordered table-striped table-condensed">
            
              <thead>
              
                <tr>
                  <th class="center">日付</th>
                  <th class="center">曜日</th>
                  <th class="center">終了予定時間</th>
                  <th class="center">指定勤務終了時間</th>
                  <th class="center">時間外時間</th>
                  <th>業務処理内容</th>
                  <th class="center">指示者確認印</th>
                  <th class="center">変更</th>
                  <th class="center">勤怠を確認する</th>
                </tr>
              </thead>
            
              
            
          
            
            
                <tbody>
                  <tr class="center">
                    <td><%= l(attendance.worked_on, format: :short) %></td>
                    <td><%= $days_of_the_week[attendance.worked_on.wday] %></td>
                    <td><%= format_basic_info(attendance.estimated_overtime_hours) %></td>
                    <td><%= format_basic_info(user.designated_work_end_time) %></td>
                    <td><%= working_times(@user.designated_work_end_time, attendance.estimated_overtime_hours) if attendance.estimated_overtime_hours.present? %></td>
                    <td><%= attendance.business_process_content %></td>
                    <td><%= a.select :overtime_response_superior, [['なし'], ['申請中'], ['承認'], ['否認']], { include_blank: false, selected: 1 } %></td>
                    <td><%= a.check_box :change, {}, "true", "false" %></td>
                    <td><%= link_to '確認', '#', class: "btn btn-primary" %></td>
                  </tr>
                </tbody>
              <% end %>
            <% end %>
          </table>
          <div class="center">
            <%= f.submit "変更を送信する", class: "btn btn-primary btn-block" %>
          </div>
      <% end %>
    </div>
  </div>
</div>