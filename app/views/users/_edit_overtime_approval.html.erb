<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      
      <%= form_with(model: @user, url: user_update_overtime_approval_path(@user), method: :patch, local: true) do |f| %>
        <% @users.each do |user| %> 
          <p class="center">【<%= user.name %>からの残業申請】</p>
              
            <table class="table table-bordered table-striped table-condensed">
              <thead>
                <tr>
                  <th class="center">日付</th>
                  <th class="center">曜日</th>
                  <th class="center">終了予定時間</th>
                  <th class="center">指定勤務終了時間</th>
                  <th class="center">時間外時間</th>
                  <th>業務処理内容</th>
                  <th class="center">指示者確認印</th>
                  <th class="center">変更</th>
                  <th class="center">勤怠を確認する</th>
                </tr>
              </thead>

              <% @attendances.each do |day| %>
                <% if day.user_id == user.id %>
                  <%= f.fields_for "attendances[]", day do |attendance| %>
                    <tbody>
                      <tr class="center">
                        <td><%= l(day.worked_on, format: :short) %></td>
                        <td><%= $days_of_the_week[day.worked_on.wday] %></td>
                        <td><%= format_basic_info(day.estimated_overtime_hours) %></td>
                        <td><%= format_basic_info(user.designated_work_end_time) %></td>
                        <%# 時間外時間 %>
                        <td><%= working_times_next_day(user.designated_work_end_time, day.estimated_overtime_hours, day.next_day_overtime) %></td>
                        <td><%= day.business_process_content %></td>
                        <td><%= attendance.select :status_overtime, [['申請中'], ['承認'], ['否認'], ['なし']], { include_blank: false, selected: 1 } %></td>
                        <td><%= attendance.check_box :change_overtime, {}, "true", "false" %></td>
                        <td><%= link_to '確認', '#', class: "btn btn-primary" %></td>
                      </tr>
                    </tbody>
                  <% end %>
                <% end %>
              <% end %>
            </table>

          
        <% end %>
          
          <div class="center">
            <%= f.submit "変更を送信する", class: "btn btn-primary btn-block" %>
          </div>
      <% end %>
    </div>
  </div>
</div>