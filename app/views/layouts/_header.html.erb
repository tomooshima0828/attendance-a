<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Attendance App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップ", root_path %></li>

        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to "ユーザー一覧", users_path %></li>
            <li><%= link_to '出勤社員一覧', working_employees_users_path %></li>
            <li><%= link_to '拠点情報の修正', branch_offices_path %></li>
            <li><%= link_to '基本情報の修正', edit_basic_info2_user_path(current_user) %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            【従業員番号: <%= current_user.employee_number %>】【<%= current_user.name %>さん】がログイン中 <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
            <% if !current_user.admin? %>
              <li><%= link_to "勤怠", current_user %></li>
            <% end %>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
          
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>